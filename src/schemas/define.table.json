        },
        "unique": {
          "type": "boolean"
        },
        "primary": {
          "type": "boolean"
        },
        "nullable": {
          "type": "boolean"
        },
        "formerNames": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "identity": {
          "type": [
            "boolean",
            "object"
          ]
        }
      }
    }
