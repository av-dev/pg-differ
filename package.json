{
  "name": "pg-differ",
  "version": "2.5.0",
  "description": "Node.js migration tool for PostgreSQL",
  "author": {
    "name": "Andrew Vereshchak",
    "email": "andrew.vereshchak@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/multum/pg-differ.git"
  },
  "homepage": "https://multum.github.io/pg-differ",
  "bugs": "https://github.com/multum/pg-differ/issues",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "pg-differ": "./bin/cli.js"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "node.js",
    "migration",
    "migration-tool",
    "automigrate"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "test": "jest --run-in-band",
    "format": "prettier --write src/**/*.js bin/**/*.js test/**/*.js",
    "docs::start": "docsify serve docs"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "6.12.0",
    "chalk": "^3.0.0",
    "metalize": "0.0.6",
    "minimist": "^1.2.5",
    "pg": "7.18.2",
    "ramda": "0.27.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
