{
  "name": "pg-differ",
  "version": "2.3.0",
  "description": "PostgreSQL migration alternative for Node.js",
  "author": {
    "name": "Andrey Vereshchak",
    "email": "vereschak@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/av-dev/pg-differ.git"
  },
  "homepage": "https://av-dev.github.io/postgres-differ",
  "bugs": "https://github.com/av-dev/postgres-differ/issues",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "pg-differ": "./bin/cli.js"
  },
  "keywords": [
    "postgres",
    "node.js",
    "migration",
    "migration-tool"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "test": "mocha test/index.test.js --no-timeout",
    "test::log": "cross-env TEST_LOGGING=true npm test",
    "eslint": "eslint --max-warnings=0 **/*.js",
    "docs::start": "docsify serve docs"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.10.0",
    "chalk": "^2.4.2",
    "minimist": "^1.2.0",
    "pg": "^7.11.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.2",
    "mocha": "^6.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently \"npm run test\" \"npm run eslint\""
    }
  }
}
