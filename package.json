{
  "name": "pg-differ",
  "version": "2.5.0",
  "description": "PostgreSQL migration alternative for Node.js",
  "author": {
    "name": "Andrey Vereshchak",
    "email": "andrew.vereshchak@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/multum/pg-differ.git"
  },
  "homepage": "https://multum.github.io/pg-differ",
  "bugs": "https://github.com/multum/pg-differ/issues",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "pg-differ": "./bin/cli.js"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "node.js",
    "migration",
    "migration-tool"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "test": "mocha test/index.test.js --no-timeout --exit",
    "test::log": "cross-env TEST_LOGGING=true npm run test",
    "eslint": "eslint --max-warnings=0 **/*.js",
    "format": "prettier --write src/**/*.js test/**/*.js",
    "docs::start": "docsify serve docs"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.10.0",
    "chalk": "^2.4.2",
    "metalize": "0.0.3",
    "minimist": "^1.2.0",
    "pg": "^7.11.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^5.2.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
