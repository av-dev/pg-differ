{
  "name": "pg-differ",
  "version": "3.1.0",
  "description": "Node.js migration tool for PostgreSQL",
  "author": {
    "name": "Andrew Vereshchak",
    "email": "andrew.vereshchak@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/multum/pg-differ.git"
  },
  "homepage": "https://multum.github.io/pg-differ",
  "bugs": "https://github.com/multum/pg-differ/issues",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "pg-differ": "./bin/cli.js"
  },
  "keywords": [
    "node",
    "pg",
    "database",
    "postgres",
    "postgresql",
    "migration"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "test": "jest --run-in-band",
    "format": "prettier --write .",
    "docs": "docsify serve docs"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "6.12.0",
    "chalk": "^4.0.0",
    "metalize": "0.1.0",
    "pg": "8.0.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
